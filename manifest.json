{
    "manifest_version": 2,
    "name": "WASD.TV - Уведомления",
    "description": "Это бета версия расширения, которое позволяет настроить получение уведомлений от WASD.TV",
    "version": "0.99",
    "version_name": "1.0-beta",

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_popup": "popup/index.html"
    },

    "content_scripts": [{
        "all_frames": true,
        "css": [
            "content-styles.css"
        ],
        "js": [
            "content-script.js"
        ],
        "matches": [
            "https://wasd.tv/*"
        ],
        "run_at": "document_start"
    }],

    "permissions": [
        "https://wasd.tv/*",
        "notifications",
        "storage"
    ]
}