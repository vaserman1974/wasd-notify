{
    "manifest_version": 2,
    "name": "WASD.TV - Уведомления",
    "description": "Это расширение позволит вам настроить получение уведомлений от WASD.TV",
    "version": "2.0",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "notifications",
        "storage"
    ]
}